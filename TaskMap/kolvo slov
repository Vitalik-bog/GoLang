package main

import (
	"fmt"
	"strings"
)

func main() {
	text := "hello world hello go world go hello"
	wordCount := make(map[string]int)
	// Разбиваем строку на слова
	words := strings.Fields(text) // Fields разбивает по пробелам

	for _, word := range words {
		// Увеличиваем счетчик для каждого слова
		wordCount[word]++
		// Это эквивалентно:
		// wordCount[word] = wordCount[word] + 1
	}

	fmt.Println("Частота слов:")
	for word, count := range wordCount {
		fmt.Printf("Слово '%s' встречается %d раз(а)\n", word, count)
	}
}
