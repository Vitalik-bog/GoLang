package main

import "fmt"

func main() {
    // –ö—É—Ä—Å—ã
    rates := map[string]float64{
        "USD": 90.5,
        "EUR": 98.2,
        "RUB": 1.0,
    }
    
    var amount float64
    var fromCurrency, toCurrency string
    
    fmt.Println("üéØ –ö–æ–Ω–≤–µ—Ä—Ç–µ—Ä –≤–∞–ª—é—Ç")
    fmt.Println("–î–æ—Å—Ç—É–ø–Ω—ã–µ –≤–∞–ª—é—Ç—ã: USD, EUR, RUB")
    
    fmt.Print("–í–≤–µ–¥–∏—Ç–µ —Å—É–º–º—É: ")
    fmt.Scan(&amount)
    
    fmt.Print("–ò–∑ –≤–∞–ª—é—Ç—ã (USD/EUR/RUB): ")
    fmt.Scan(&fromCurrency)
    
    fmt.Print("–í –≤–∞–ª—é—Ç—É (USD/EUR/RUB): ")
    fmt.Scan(&toCurrency)
    
    // –ü—Ä–æ–≤–µ—Ä–∫–∞ –≤–∞–ª–∏–¥–Ω–æ—Å—Ç–∏ –≤–∞–ª—é—Ç
    fromRate, fromOk := rates[fromCurrency]
    toRate, toOk := rates[toCurrency]
    
    if !fromOk || !toOk {
        fmt.Println("–û—à–∏–±–∫–∞: –Ω–µ–≤–µ—Ä–Ω–∞—è –≤–∞–ª—é—Ç–∞!")
        return
    }
    
    if amount <= 0 {
        fmt.Println("–û—à–∏–±–∫–∞: —Å—É–º–º–∞ –¥–æ–ª–∂–Ω–∞ –±—ã—Ç—å –ø–æ–ª–æ–∂–∏—Ç–µ–ª—å–Ω–æ–π!")
        return
    }
    
    // –ö–æ–Ω–≤–µ—Ä—Ç–∞—Ü–∏—è: —Å—É–º–º–∞ * (–∫—É—Ä—Å —Ü–µ–ª–µ–≤–æ–π –≤–∞–ª—é—Ç—ã / –∫—É—Ä—Å –∏—Å—Ö–æ–¥–Ω–æ–π –≤–∞–ª—é—Ç—ã)
    result := amount * (toRate / fromRate)
      
    fmt.Printf("\n=== –†–µ–∑—É–ª—å—Ç–∞—Ç –∫–æ–Ω–≤–µ—Ä—Ç–∞—Ü–∏–∏ ===\n")
    fmt.Printf("%.2f %s = %.2f %s\n", amount, fromCurrency, result, toCurrency)
    fmt.Printf("–ö—É—Ä—Å: 1 %s = %.4f %s\n", fromCurrency, toRate/fromRate, toCurrency)
}
