package main

import (
    "encoding/json"
    "fmt"
    "log"
)

func main() {
    p := Person{Name: "Alice", Age: 30}
    
    // Сериализация (маршалинг)
    data, err := json.Marshal(p)
    if err != nil {
        log.Fatal(err)
    }
    fmt.Println(string(data)) // {"name":"Alice","age":30}
    
    // Десериализация (анмаршалинг)
    var p2 Person
    err = json.Unmarshal(data, &p2)
    if err != nil {
        log.Fatal(err)
    }
    fmt.Printf("%+v\n", p2) // {Name:Alice Age:30}
}
