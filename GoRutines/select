package main

import (
	"fmt"
	"time"
)

func main() {
	ch1 := make(chan string)
	ch2 := make(chan string)

	go func() {
		for {
			time.Sleep(1 * time.Second)
			ch1 <- "Горутина 1"
		}
	}()

	go func() {
		for {
			time.Sleep(2 * time.Second)
			ch2 <- "Горутина 2"
		}
	}()

	for i := 0; i < 5; i++ {
		select {
		case msg1 := <-ch1:
			fmt.Println(msg1)
		case msg2 := <-ch2:
			fmt.Println(msg2)
		}
	}
}
