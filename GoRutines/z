package main

import "fmt"

func worker(id int, done chan bool) {
    fmt.Printf("Worker %d started\n", id)
    // Имитация работы
    fmt.Printf("Worker %d done\n", id)
    done <- true
}

func main() {
    done := make(chan bool, 3)

    for i := 1; i <= 3; i++ {
        go worker(i, done)
    }

    // Ожидание завершения всех горутин
    for i := 0; i < 3; i++ {
        <-done
    }
    fmt.Println("All workers completed")
}
