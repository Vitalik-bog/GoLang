package main

import "fmt"

func main() {
    month := 2
    year := 2024 // для февраля
    
    switch month {
    case 1, 3, 5, 7, 8, 10, 12:
        fmt.Println("31 день")
    case 4, 6, 9, 11:
        fmt.Println("30 дней")
    case 2:
        if year%4 == 0 && (year%100 != 0 || year%400 == 0) {
            fmt.Println("29 дней (високосный)")
        } else {
            fmt.Println("28 дней")
        }
    default:
        fmt.Println("Неверный месяц")
    }
}
