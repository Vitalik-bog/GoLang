package main

import "fmt"

// –°—Ç—Ä—É–∫—Ç—É—Ä–∞ - –∫–∞–∫ "—á–µ—Ä—Ç–µ–∂" –æ–±—ä–µ–∫—Ç–∞
type Book struct {
    Title  string
    Author string
    Pages  int
}

// –ú–µ—Ç–æ–¥ - —Ñ—É–Ω–∫—Ü–∏—è, –ø—Ä–∏–≤—è–∑–∞–Ω–Ω–∞—è –∫ —Å—Ç—Ä—É–∫—Ç—É—Ä–µ
func (b Book) Display() {
    fmt.Printf("üìñ '%s' by %s (%d pages)\n", b.Title, b.Author, b.Pages)
}

// –ï—â–µ –æ–¥–∏–Ω –º–µ—Ç–æ–¥
func (b Book) IsLong() bool {
    return b.Pages > 300
}

func main() {
    // –°–æ–∑–¥–∞–µ–º —ç–∫–∑–µ–º–ø–ª—è—Ä —Å—Ç—Ä—É–∫—Ç—É—Ä—ã
    book1 := Book{
        Title:  "The Go Programming Language",
        Author: "Donovan & Kernighan",
        Pages:  400,
    }
    
    book2 := Book{"Learn Go in 1 Day", "John Doe", 150}
    
    // –í—ã–∑—ã–≤–∞–µ–º –º–µ—Ç–æ–¥—ã
    book1.Display()
    book2.Display()
    
    fmt.Printf("Is '%s' long? %t\n", book1.Title, book1.IsLong())
    fmt.Printf("Is '%s' long? %t\n", book2.Title, book2.IsLong())
}
