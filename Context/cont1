package main

import (
	"context"
	"fmt"
	"net/http"
	"time"
)

func main() {
	// Создаем контекст с таймаутом 3 секунды
	ctx, cancel := context.WithTimeout(context.Background(), 3*time.Second)
	defer cancel()

	// Создаем HTTP-запрос с контекстом
	req, err := http.NewRequestWithContext(ctx, "GET", "https://httpbin.org/delay/5", nil)
	if err != nil {
		panic(err)
	}

	// Выполняем запрос
	resp, err := http.DefaultClient.Do(req)
	if err != nil {
		fmt.Printf("Ошибка: %v\n", err) // Прервется через 3 секунды
		return
	}
	defer resp.Body.Close()

	fmt.Printf("Статус: %d\n", resp.StatusCode) //503
}
