package main

import "fmt"

func main() {
    // Объявление переменных
    var name string = "John"
    var age int = 25
    var isActive bool = true
    
    // Короткое объявление (чаще используется)
    salary := 50000.75
    city := "Moscow"
    
    // Константы
    const CompanyName = "TechCorp"
    
    // Множественное объявление
    var (
        id int = 1
        department = "IT"
    )
    
    // Основные типы
    var (
        count int       // целое число: 0, 1, -5
        price float64   // дробное: 3.14, -2.5
        name string     // строка: "hello"
        active bool     // булево: true/false
        data []byte     // байты
    )
    
    fmt.Println(name, age, salary, city)
}
