package main

import (
    "fmt"
    "sync"
    "time"
)

func worker(id int, wg *sync.WaitGroup) {
    defer wg.Done() // Уменьшаем счетчик, когда функция завершается
    fmt.Printf("Воркер %d начал работу\n", id)
    time.Sleep(time.Second) // Имитация работы
    fmt.Printf("Воркер %d завершил работу\n", id)
}

func main() {
    var wg sync.WaitGroup

    for i := 1; i <= 3; i++ {
        wg.Add(1) // Увеличиваем счетчик на 1 для каждого воркера
        go worker(i, &wg)
    }

    wg.Wait() // Ждем, пока все воркеры завершатся
    fmt.Println("Все воркеры завершили работу")
}
