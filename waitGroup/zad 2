package main

import (
    "fmt"
    "time"
)

func простойРаботник(номер int) {
    fmt.Printf("Работник %d начал работу\n", номер)
    time.Sleep(time.Second) // Имитируем работу
    fmt.Printf("Работник %d закончил работу\n", номер)
}

func main() {
    // Запускаем 3 горутины
    for i := 1; i <= 3; i++ {
        go простойРаботник(i)
    }
    
    // Ждем немного, чтобы горутины успели выполниться
    time.Sleep(2 * time.Second)
    fmt.Println("Основная программа завершена")
}
