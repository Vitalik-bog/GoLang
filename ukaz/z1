package main

import "fmt"

func main() {
    a := 1
    fmt.Println("Исходное значение a:", a) // 1
    fmt.Println("Адрес переменной a:", &a) // 0xc00001a0b8 (пример)

    // Передаем УКАЗАТЕЛЬ на 'a' в функцию
    double(&a)

    fmt.Println("Значение a после вызова double:", a) // 2
}

// Функция принимает указатель на int
func double(x *int) {
    fmt.Println("x внутри функции - это адрес:", x)
    fmt.Println("Значение по адресу x до изменения:", *x) // 1

    *x = *x * 2 // Меняем значение по адресу
}
