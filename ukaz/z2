package main

import "fmt"

// Определение структуры
type Person struct {
    Name string
    Age  int
}

func main() {
    // Создание экземпляра структуры
    person := Person{
        Name: "Anna",
        Age:  28,
    }

    // Доступ к полям
    fmt.Printf("Имя: %s, Возраст: %d\n", person.Name, person.Age)

    // Изменение поля
    person.Age = 29
    fmt.Printf("Теперь Анне: %d\n", person.Age)
}
