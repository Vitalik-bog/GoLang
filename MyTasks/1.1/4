package main

import "fmt"

func main() {
	var Number int

	fmt.Print("Введите пожалуйста число: ")
	fmt.Scanln(&Number)

	if Number%2 == 0 {
		fmt.Printf("Число %d четное \n", Number)
	} else {
		fmt.Printf("Число %d нечетное\n", Number)
	}
}


package main

import "fmt"

func main() {
	num := 10
	if num%2 == 0 {
		fmt.Printf("четное %d число\n", num)
	} else {
		fmt.Printf("нечетное %d число\n", num)
	}
}
