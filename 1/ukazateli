package main

import "fmt"

func main() {
    x := 42
    var p *int // объявляем указатель на int
    
    p = &x // p теперь содержит адрес x
    
    fmt.Println("Значение x:", x)        // 42
    fmt.Println("Адрес x:", &x)          // 0xc000018030 (пример адреса)
    fmt.Println("Значение p:", p)        // 0xc000018030 (тот же адрес)
    fmt.Println("Значение по адресу p:", *p) // 42
    
    *p = 100 // меняем значение через указатель
    fmt.Println("Новое значение x:", x) // 100
}
